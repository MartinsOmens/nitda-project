<!------- ADMIN DASHBOARD CODE BASE -->
import { Link, Outlet, useLocation } from "react-router-dom";

export default function AdminDashboard() {
  const location = useLocation();

  return (
    <div className="p-6 bg-gray-50 min-h-screen">
      <h1 className="text-3xl font-bold mb-2">Admin Dashboard</h1>
      <p className="text-gray-600 mb-6">
        Manage events, attendance, and sub-admin requests
      </p>

      {/* Navigation Tabs */}
      <div className="flex space-x-4 mb-8">
        <Link
          to="/admin/create-event"
          className={`px-4 py-2 rounded-full ${
            location.pathname.includes("create-event")
              ? "bg-purple-600 text-white"
              : "bg-gray-200 text-gray-800"
          }`}
        >
          + Create Event
        </Link>

        <Link
          to="/admin/manage-events"
          className={`px-4 py-2 rounded-full ${
            location.pathname.includes("manage-events")
              ? "bg-purple-600 text-white"
              : "bg-gray-200 text-gray-800"
          }`}
        >
          üìÖ Manage Events
        </Link>

        <Link
          to="/admin/attendance"
          className={`px-4 py-2 rounded-full ${
            location.pathname.includes("attendance")
              ? "bg-purple-600 text-white"
              : "bg-gray-200 text-gray-800"
          }`}
        >
          üßæ Attendance
        </Link>

        <Link
          to="/admin/manage-sub-admins"
          className={`px-4 py-2 rounded-full ${
            location.pathname.includes("manage-sub-admins")
              ? "bg-purple-600 text-white"
              : "bg-gray-200 text-gray-800"
          }`}
        >
          üë• Manage Sub-Admins
        </Link>
      </div>

      {/* Page content goes here */}
      <div className="bg-white p-6 rounded-2xl shadow">
        <Outlet />
      </div>
    </div>
  );
}


